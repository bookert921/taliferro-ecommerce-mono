{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@utils": ["src/utils"],
      "@shared/*": ["./../../shared/*"],
      "@services": ["src/services"]
    }
  },
  "compileOnSave": true,
  "include": ["src", "__TESTS__/**/*"],
  "forceConsistentCasingInFileNames": true
}
